<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Mr.Potato Head"
            android:textSize="40sp" />

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textTitle"
            android:gravity="center">


            <ImageView
                android:id="@+id/imageBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/body" />

            <ImageView
                android:id="@+id/imageHat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hat" />

            <ImageView
                android:id="@+id/imageEyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyes" />

            <ImageView
                android:id="@+id/imageEyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyebrows" />

            <ImageView
                android:id="@+id/imageGlasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/glasses" />

            <ImageView
                android:id="@+id/imageArms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arms" />

            <ImageView
                android:id="@+id/imageEars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ears" />
            <ImageView
                android:id="@+id/imageNose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nose" />

            <ImageView
                android:id="@+id/imageMustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mustache" />

            <ImageView
                android:id="@+id/imageMouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mouth" />

            <ImageView
                android:id="@+id/imageShoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shoes" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/checkLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageLayout">

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/checkHat"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Hat" />

                <CheckBox
                    android:id="@+id/checkEyes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Eyes" />

                <CheckBox
                    android:id="@+id/checkEyebrows"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Eyebrows" />

                <CheckBox
                    android:id="@+id/checkGlasses"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Glasses" />

                <CheckBox
                    android:id="@+id/checkArms"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Arms" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/radioGroup1">

                <CheckBox
                    android:id="@+id/checkNose"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Nose" />

                <CheckBox
                    android:id="@+id/checkMustache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mustache" />

                <CheckBox
                    android:id="@+id/checkMouth"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Mouth" />

                <CheckBox
                    android:id="@+id/checkEars"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ears" />

                <CheckBox
                    android:id="@+id/checkShoes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Shoes" />

            </RadioGroup>


        </RelativeLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>